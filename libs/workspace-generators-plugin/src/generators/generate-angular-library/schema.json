{
  "$schema": "http://json-schema.org/schema",
  "$id": "GenerateAngularLibrary",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "domain": {
      "type": "string",
      "description": "Domain of the library",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": {
        "message": "What domain would you like to use?",
        "type": "list",
        "items": ["finance", "hr", "marketing", "inventory", "shared"]
      }
    },
    "type": {
      "type": "string",
      "description": "Type of the library",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": {
        "message": "What type is this library?",
        "type": "list",
        "items": ["ui", "data-access", "feature", "util", "all"]
      }
    }
  },
  "required": ["name", "domain", "type"]
}
